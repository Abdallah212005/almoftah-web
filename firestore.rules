rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'abdallah@almoftah.com' ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    function isActiveAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/admin_users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.visible == true;
    }

    function isAdmin() {
      return isSuperAdmin() || isActiveAdmin();
    }

    // Publicly readable listings
    match /units/{unitId} {
      allow read, list: if true;
      allow create: if isAdmin();
      allow update, delete: if isAdmin();
    }

    match /users/{userId} {
       allow read, update: if isOwner(userId);
       allow create: if isSignedIn();
     }

    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /brokers/{brokerId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    match /clients/{clientId} {
      allow read, list, create, update, delete: if isAdmin();
    }
    
    match /chats/{chatId} {
      allow read, list: if isAdmin() || (isSignedIn() && (chatId.split('_')[0] == request.auth.uid));
      allow create: if isSignedIn();
      allow update: if isAdmin() || (isSignedIn() && chatId.split('_')[0] == request.auth.uid);
      allow delete: if isAdmin();
    }

    match /admin_users/{adminUserId} {
      allow get: if isOwner(adminUserId) || isSuperAdmin();
      allow list: if isAdmin();
      allow create, update: if isSuperAdmin() || (isSignedIn() && request.auth.token.email == 'abdallah@almoftah.com');
      allow delete: if isSuperAdmin();
    }

    match /roles_admin/{uid} {
      allow get: if isOwner(uid) || isSuperAdmin();
      allow list, update, delete: if isSuperAdmin();
      allow create: if isSuperAdmin() || (isSignedIn() && request.auth.token.email == 'abdallah@almoftah.com');
    }
  }
}
